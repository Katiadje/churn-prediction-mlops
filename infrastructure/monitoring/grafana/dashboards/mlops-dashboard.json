{
  "dashboard": {
    "title": "MLOps Churn Prediction Dashboard",
    "tags": ["mlops", "churn", "prediction"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"churn_api\"}[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        }
      },
      {
        "id": 2,
        "title": "API Response Time (p95)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"churn_api\"}[5m]))",
            "legendFormat": "p95 latency"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        }
      },
      {
        "id": 3,
        "title": "Prediction Volume",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(predictions_total{job=\"churn_api\"})",
            "legendFormat": "Total Predictions"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 6,
          "h": 4
        }
      },
      {
        "id": 4,
        "title": "High Risk Predictions",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(predictions_total{risk_level=\"HIGH\"})",
            "legendFormat": "High Risk"
          }
        ],
        "gridPos": {
          "x": 6,
          "y": 8,
          "w": 6,
          "h": 4
        }
      },
      {
        "id": 5,
        "title": "Model Performance (F1 Score)",
        "type": "gauge",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "model_f1_score{job=\"churn_api\"}",
            "legendFormat": "F1 Score"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 4
        }
      },
      {
        "id": 6,
        "title": "Data Drift Score",
        "type": "gauge",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "data_drift_score{job=\"churn_api\"}",
            "legendFormat": "Drift Score"
          }
        ],
        "gridPos": {
          "x": 18,
          "y": 8,
          "w": 6,
          "h": 4
        }
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"churn_api\",status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        }
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"churn_api\"}",
            "legendFormat": "Memory (bytes)"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 8
        }
      }
    ],
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s"
  }
}